# General aliases
alias ls='ls --color=auto'
alias sl=ls
alias ll='ls -al'
alias c='clear'
alias q='exit'
alias ..='cd ..'
alias ...='cd ../../'
alias -- -='cd -' # Go back to previous directory

# Current directory name
alias dir='echo ${PWD##*/}'
alias kill='kill -9'
alias tailf='tail -f'

alias py="python"

alias refresh='source ~/.bashrc && clear'
alias reload='source ~/.bashrc && clear'

alias f='ffind'

alias ipaddr="ifconfig | grep broadcast | grep inet | cut -d ' ' -f 2"
alias webserver='python -m SimpleHTTPServer'

# Mercurial
alias diff='hg diff --git'
alias import='hg import --no-commit'
alias undo='hg revert --all'
alias st='hg st'

# Git
alias gl='git log --graph --pretty=format:"%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset" --abbrev-commit'

# Vagrant
alias recreate='vagrant destroy --force && vagrant up'

# t
alias t='python ~/extras/t/t.py --task-dir /Users/pradeek/Dropbox/Tasks --list general'
